{
  "name": "hardhat-boilerplate",
  "version": "0.0.1",
  "description": "Boiler plate hardhat project typescript",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile",
    "lint": "npx solhint contracts/*.sol && npx eslint . && npx markdownlint --ignore node_modules **/*.md",
    "format": "prettier --check \"contracts/**/*.sol\" \"**/*.ts\" \"**/*.md\" \"**/*.yml\"",
    "test": "npx hardhat test",
    "coverage": "npm run build && npx hardhat coverage --temp artifacts --network coverage"
  },
  "dependencies": {
    "@ethersproject/contracts": "^5.0.9",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.6",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.4.2",
    "@typechain/ethers-v5": "^2.0.0",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.22",
    "axios": "^0.25.0",
    "bip39": "^3.0.4",
    "chai": "^4.2.0",
    "dotenv": "^8.2.0",
    "eth-sig-util": "^3.0.1",
    "ethereum-waffle": "^3.2.1",
    "ethereumjs-util": "^7.0.10",
    "ethereumjs-wallet": "^1.0.1",
    "ethers": "^5.0.26",
    "hardhat": "^2.6.6",
    "hardhat-contract-sizer": "^2.1.1",
    "hardhat-deploy": "^0.9.4",
    "hardhat-typechain": "^0.3.5",
    "node-fetch": "^3.2.0",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.3",
    "solidity-coverage": "^0.7.14",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.1.1",
    "typechain": "^3.0.0",
    "typescript": "^4.1.3",
    "web3": "^1.2.9"
  },
  "devDependencies": {
    "@openzeppelin/contracts-upgradeable": "^4.5.1",
    "@types/eth-sig-util": "^2.1.1",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "eslint": "^7.18.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "markdownlint": "^0.22.0",
    "markdownlint-cli": "^0.26.0"
  }
}
